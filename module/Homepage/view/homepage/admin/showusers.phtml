<script>
    $(document).ready(function () {
        boolFirstCall = true;

        $('[data-uk-tab]').on('change.uk.tab', function (event, activeItem, previousItem) {

            var strURL = window.location.href;
            if (strURL.search(/&typ=[1-3]/) > -1) {
                strURL = strURL.replace(/&typ=[1-3]/, '&typ=' + activeItem.data().id);
            }
